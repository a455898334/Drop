    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAH35jXY2Yb5eApUzvZXuObiwFOpTC9xu0&sensor=true">
</script>
    
    
<script type="text/javascript">
var map;
var markersArray = [];

function initialize() {
    var a = new google.maps.LatLng(40.731649,-73.923269);
//  var b = new google.maps.LatLng(40.742649,-73.913269);
//  var c = new google.maps.LatLng(40.731649,-73.913269);
  var mapOptions = {
    zoom: 12	,
    center: a,
    mapTypeId: google.maps.MapTypeId.HYBRID
  };
  map =  new google.maps.Map(document.getElementById("map_canvas"), mapOptions);

//  addMarker(a,"Let's play a game");
//  addMarker(b,"Go to this coordinate:");
//  addMarker(c,"Go there next");
	{% for x in MessageList %}
		var newMark = new google.maps.LatLng({{MessageList[0][x]}},{{MessageList[1][x]}});
		addMarker(newMark, {{MessageList[2][x]}});
	{% endfor %}
  // Make a fuction to create all markers TODO TODO TODO TODO TODO TODO TODO TODO TODO TODO TODO TODO TODO
  
  //initialize InfoWindow
  infowindow = new google.maps.InfoWindow({  	content: "holding..."  });
  
  
  for (var i = 0; i < markersArray.length; i++) {
  	  var marker = markersArray[i];
  	  google.maps.event.addListener(marker, 'click', function () {
  	  	infowindow.setContent(this.user);
		infowindow.open(map, this);
		map.setCenter(this.getPosition());
	  });
	}
}



function addMarker(location,user) {
  marker = new google.maps.Marker({
    position: location,
    map: map,    
    user: user
  });
  markersArray.push(marker);
}

// Removes the overlays from the map, but keeps them in the array
function clearOverlays() {
  if (markersArray) {
    for (i in markersArray) {
      markersArray[i].setMap(null);
    }
  }
}

// Shows any overlays currently in the array
function showOverlays() {
  if (markersArray) {
    for (i in markersArray) {
      markersArray[i].setMap(map);
    }
  }
}

// Deletes all markers in the array by removing references to them
function deleteOverlays() {
  if (markersArray) {
    for (i in markersArray) {
      markersArray[i].setMap(null);
    }
    markersArray.length = 0;
  }
}
    </script>
